<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/ranking_item_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/position_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="32dp"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/one"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="33dp"
            android:layout_alignTop="@+id/position_imageView"
            android:layout_toEndOf="@+id/position_imageView">

            <TextView
                android:id="@+id/nick_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/score_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nick_textView"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="@color/greenApp"/>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
